@model System.Web.Mvc.HandleErrorInfo
@{
    ViewBag.Title = (!String.IsNullOrWhiteSpace(ViewBag.StatusCode)) ? ViewBag.StatusCode : "500 Error";
}

<h1 class="error">@(!String.IsNullOrWhiteSpace(ViewBag.StatusCode) ? ViewBag.StatusCode : "500 Error"):</h1>

@if (Model != null)
{
    @if (Model.ActionName != null) {<p>Action Name: @Model.ActionName</p>}
    @if (Model.ControllerName != null) {<p>Controller Name: @Model.ControllerName</p>}
    @if (Model.Exception != null)
    {
        if (Model.Exception.Message != null) {<p>Exception Message: @Model.Exception.Message</p> }
        if (Model.Exception.StackTrace != null) { <p>Exception Stack Trace: @Model.Exception.StackTrace</p>}
    }
}

